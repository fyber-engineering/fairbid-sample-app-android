<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="?android:attr/selectableItemBackground"
        android:layout_height="85dp">

    <ImageView
        android:id="@+id/row_unit_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="4dp"
        android:contentDescription="icon" />


    <TextView
            android:id="@+id/row_text_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lineSpacingMultiplier="1.29"
            android:textSize="15sp"
            android:textColor="@color/purple_text"
            android:layout_toRightOf="@id/row_unit_image"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical|left"
            android:layout_alignBottom="@id/row_unit_image"
            android:layout_toLeftOf="@id/right_unit_arrow"
            android:layout_alignTop="@id/row_unit_image"
            tools:ignore="RtlHardcoded"/>

    <ImageView
            android:id="@+id/right_unit_arrow"
            android:layout_width="30dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/right_arrow"
            android:layout_alignParentEnd="true"
            android:contentDescription="arrow"/>

    <View
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="20dp"
            android:background="@color/gray_separator_line"
            android:id="@+id/row_border"
            android:layout_height="1dp"
            android:layout_width="match_parent"
            android:layout_marginStart="20dp"/>

</RelativeLayout>
